<html>
  <head>
    <title>Messy</title>
  </head>
  <body>
    <%- include('header') %>
    <div>
      <a href="new">New Message</a>
      <ul>
        <% for (let msg of messages){ %>
        <li>
          <div class="msg-card">
            <div class="msg-header">
              <h2 class="username"><%= msg.user %></h2>
              <div class="msg-date"><%= msg.added %></div>
            </div>
            <div class="msg-text"><%= msg.text %></div>
            <a href="message/<%= msg.id %>">Details</a>
          </div>
        </li>
        <% } %>
      </ul>
    </div>
  </body>
</html>
